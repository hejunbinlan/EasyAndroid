<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.hjb.easyandroid.MainActivity$PlaceholderFragment" >

    <org.hjb.easyandroid.ui.widget.EAScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <org.hjb.easyandroid.ui.widget.EAScrollViewHeader
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:background="#ffff0000" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:background="#ffffff00" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:background="#ffaaff33" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:background="#ff0000ff" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:background="#ff00ffff"
                android:tag="sticky" >

                <Button
                    android:id="@+id/button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Button" />
            </FrameLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:background="#ffff3333" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:background="#ffffeeee" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:background="#ff0033ff" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:background="#ffcc9922" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:background="#ff333333" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:background="#ffeeeeee" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:background="#ff999999" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:background="#fff322ff" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:background="#ff22ff22" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:background="#ffff0000" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:background="#ffff00ff" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:background="#ff00ffff" />
        </LinearLayout>
    </org.hjb.easyandroid.ui.widget.EAScrollView>

</LinearLayout>